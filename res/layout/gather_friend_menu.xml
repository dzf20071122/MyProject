<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    android:orientation="vertical" >

    <com.research.widget.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/school_fellow_menu"
                android:layout_width="match_parent"
                android:layout_height="70dip"
                android:layout_marginTop="0dp"
                android:background="@drawable/chat_tab_list_selector"
                android:clickable="true"
                android:paddingLeft="12dp" >

                <ImageView
                    android:id="@+id/iv_xiaoyou"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/find_fujin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_xiaoyou"
                    android:text="校友会"
                    android:textColor="#353535"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="12dp"
                    android:background="#dadada" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/countrymen_menu"
                android:layout_width="match_parent"
                android:layout_height="70dip"
                android:background="@drawable/chat_tab_list_selector"
                android:clickable="true"
                android:paddingLeft="12dp" >

                <ImageView
                    android:id="@+id/iv_laoxiang"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/find_fujin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_laoxiang"
                    android:text="老乡会"
                    android:textColor="#353535"
                    android:textSize="18sp" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/make_friend_layout"
                android:layout_width="match_parent"
                android:layout_height="70dip"
                android:background="@drawable/chat_tab_list_selector"
                android:clickable="true"
                android:paddingLeft="12dp"
                android:layout_marginTop="0dip" >

                <ImageView
                    android:id="@+id/iv_make_friend"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/find_fujin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_make_friend"
                    android:text="交友墙"
                    android:textColor="#353535"
                    android:textSize="18sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="12dp"
                    android:background="#dadada" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/blind_date_layout"
                android:layout_width="match_parent"
                android:layout_height="70dip"
                android:background="@drawable/chat_tab_list_selector"
                android:clickable="true"
                android:paddingLeft="12dp" >

                <ImageView
                    android:id="@+id/iv_blind_date"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/find_fujin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_blind_date"
                    android:text="相亲墙"
                    android:textColor="#353535"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </com.research.widget.ReboundScrollView>

</LinearLayout>