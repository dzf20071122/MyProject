<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_list_item_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp" >

        <ImageView
            android:id="@+id/heardImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/username_icon" />

        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/heardImageView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/heardImageView"
            android:singleLine="true"
            android:text="张三"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/user_sex_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/user_name_text_view"
            android:layout_below="@+id/user_name_text_view"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:text="男"
            android:textColor="@color/font_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/user_old_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/user_sex_text_view"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/user_sex_text_view"
            android:text="25岁"
            android:textColor="@color/font_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/user_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/user_name_text_view"
            android:layout_below="@+id/user_sex_text_view"
            android:layout_marginTop="2dp"
            android:text="杭州市相城区"
            android:textSize="14sp" />
    </RelativeLayout>
	<RelativeLayout
        android:id="@+id/qm_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingLeft="13dip"
        android:paddingRight="13dip"
        android:visibility="visible" >

        <TextView
            android:id="@+id/qm_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/what_up"
            android:textColor="@color/editor_hint_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/qm_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/qm_txt"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/font_color"
            android:textSize="14sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="#dadada" />
    <RelativeLayout
        android:id="@+id/xq_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingLeft="13dip"
        android:paddingRight="13dip"
        android:visibility="visible" >

        <TextView
            android:id="@+id/xy_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/xiangqin_xuanyan"
            android:textColor="@color/editor_hint_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/xy_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/xy_txt"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/font_color"
            android:textSize="14sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="#dadada" />
	<RelativeLayout
        android:id="@+id/xqyq_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingLeft="13dip"
        android:paddingRight="13dip"
        android:visibility="visible" >

        <TextView
            android:id="@+id/yq_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            
            android:text="@string/xiangqin_require"
            android:textColor="@color/editor_hint_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/yq_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/yq_txt"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/font_color"
            android:layout_marginLeft="10dp"
            android:textSize="14sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/user_dongtai_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="最近一次动态链接"
        android:textSize="14sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="#dadada" />

    <TextView
        android:id="@+id/user_photo_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="相册"
        android:textSize="14sp" 
        android:visibility="gone"/>

    <TextView
        android:id="@+id/user_xuanyan_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="相亲/交友宣言"
        android:textSize="14sp" 
        android:visibility="gone"/>


    <TextView
        android:id="@+id/user_require_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="相亲/交友要求"
        android:textSize="14sp" 
        android:visibility="gone"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/add_friend_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="添加好友"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/send_gift_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/add_friend_btn"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/add_friend_btn"
            android:text="送礼物"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/zan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/add_friend_btn"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/send_gift_btn"
            android:text="赞"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>